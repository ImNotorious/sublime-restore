void leadingZeroes_binExp(int n, int k) {
    double p = k * log10(n);
    double ex = p - floor(p);
    double lead = pow(10, ex) * 100.00; // multiplier for first 3 digits
    printf("%03d",(int)lead);
}
]]></content>
